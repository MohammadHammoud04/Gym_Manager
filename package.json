{
  "name": "gym_manager",
  "version": "1.0.0",
  "main": "client/electron/main.cjs",
  "description": "Gym Management System",
  "author": "Mohammad",
  "scripts": {
    "dev": "concurrently \"cd client && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "cd client && npm run build && cd ../server && npm install --production && cd .. && electron-builder"
  },
  "build": {
    "appId": "com.gym.manager",
    "productName": "B7Gym",
    "win": {
      "target": "nsis",
      "icon": "client/electron/favicon.ico",
      "requestedExecutionLevel": "asInvoker" 
    },
    "nsis": {
      "installerIcon": "client/electron/favicon.ico",
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "files": [
      "client/dist/**/*",
      "client/electron/**/*",
      "package.json",
      "server/**/*",
      "!server/node_modules"
    ],
    "extraResources": [
      "server/.env",
      {
        "from": ".env",
        "to": "."
      },
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules"
        ]
      },
      {
        "from": "server/node_modules",
        "to": "server/node_modules"
      }
    ],
    "asarUnpack": [
      "server/**/*"
    ],
    "asar": true,
    "directories": {
      "output": "dist_electron"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "mongoose": "^9.1.5"
  }
}